{
	"transform": {
	  "^.+\\.(t|j)sx?$": "ts-jest"
	},
	"testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
	"moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
	"extensionsToTreatAsEsm": [".ts"],
	"preset": "ts-jest",
	"moduleNameMapper": {
		"^(\\.{1,2}/.*)\\.js$": "$1"
	}
}
